<EditForm Model="Response" OnInvalidSubmit="OnValidSubmit">
  <DataAnnotationsValidator />
  <MudTextField Label="Name" @bind-Value="Response.Summary.Version" For="@(()=> Response.Summary.Version)" />
  <MudTextField Label="Path" @bind-Value="Response.Summary.Status" For="@(() => Response.Summary.Status)" />
  <MudExpansionPanels Dense="true" Class="mt-0" Elevation="0">
    <MudExpansionPanel Dense="true" Class="mt-0 pl=0" DisableGutters="true" Text="Headers" @bind-IsExpanded="headerExpanded">
      <MudDataGrid T="HttpHeader" Items="Response.Headers" Style="align-items: center;">
        <Columns>
          <PropertyColumn Property="hdr => hdr.Name" />
          <PropertyColumn Property="hdr => hdr.Value" />
        </Columns>
      </MudDataGrid>
    </MudExpansionPanel>
  </MudExpansionPanels>
  <MudTextField Label="Content" @bind-Value="Response.Content" For="@(()=> Response.Content)" Lines="20" />
</EditForm>

@code {
  private bool headerExpanded = true;

  [Parameter]
  public Response Response { get; set; } = new();

  private void OnValidSubmit()
  {
  }
}
